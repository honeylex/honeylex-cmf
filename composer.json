    "name": "honeylex/honeylex-cmf",
    "type": "project",
    "description": "Honeybee CQRS & ES integration with the Silex framework, for CMS building.",
    "keywords": [ "honeybee", "silex", "symfony", "cqrs", "framework", "event sourcing", "cms", "security" ],
